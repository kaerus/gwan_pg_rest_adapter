        case HTTP_POST: {
            return batch_jobs(argc,argv,req,rep,db);
        } break;
        case HTTP_DELETE: {
           
        } break;
        case HTTP_PUT: {
           
        } break;
        default: break;
    }
    
    return db_error(rep,HTTP_405_METHOD_NOT_ALLOWED,"method not allowed");
}
